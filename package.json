  },
  "dependencies": {
    "audio-play": "^2.3.1",
    "ffplay-static": "^3.2.2",
    "framer-motion": "^11.9.0",
    "howler": "^2.2.4",
    "lucide-react": "^0.447.0",
    "music-metadata": "^10.5.0",
    "next": "14.2.14",
    "play-sound": "^1.1.6",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/howler": "^2.2.12",
    "@types/node": "^20",
    "@types/plist": "^3.0.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.Melody.app",
    "productName": "Melody",
    "files": [
      "main.js",
      "out/**/*",
      "preload.js",
      "node_modules/**/*",
      "package.json",
      "icon.png"
